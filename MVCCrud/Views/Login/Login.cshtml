@model MVCCrud.Models.LoginModel
@{
    ViewBag.Title = "Login";
}<style>
    .form-container {
        width: 600px;
        margin: 0 auto;
        padding: 50px;
        background-color: lightgreen;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        color: #fff;
    }
</style>

<h2>Login</h2>

<div class="container">
    <div class="form-container">
        <h1>Login</h1>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(a => a.Email, new { @value = "Email" })
                @Html.TextBoxFor(a => a.Email, new { @class = "form-control", type = "email", @placeholder = "example@gmail.com" })
                @Html.ValidationMessageFor(a => a.Email, "", new { @class = "error" })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(a => a.Password, new { @value = "Password" })
                @Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })
                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "error" })
            </div>
            <br />
            <button class="btn btn-success" type="submit">Login</button>
        }

        
        <p>Don't have an account? <Button class="btn btn-outline-success">@Html.ActionLink("signup", "signup", "Home")</Button></p>
    </div>

    
</div>